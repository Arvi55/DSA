class Solution {
private:
    bool valid(char ch) {
        return isalnum(ch); // Simplify validation
    }

    char Tolowercase(char ch) {
        return tolower(ch); // Use standard library function
    }

    bool checkpalindrome(string a) {
        int s = 0;
        int e = a.length() - 1;
        while (s <= e) {
            if (a[s] != a[e]) {
                return false;
            } else {
                s++;
                e--;
            }
        }
        return true;
    }

public:
    bool isPalindrome(string s) {
        string temp = "";
        for (int j = 0; j < s.length(); j++) {
            if (valid(s[j])) {
                temp.push_back(Tolowercase(s[j])); // Convert while adding
            }
        }
        return checkpalindrome(temp);
    }
};
