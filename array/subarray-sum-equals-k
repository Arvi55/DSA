class Solution {
public:
    int subarraySum(vector<int>& arr, int k) {
        int n = arr.size();
        int count = 0;
        unordered_map<int, int> m;
        int prefixsum = 0;
        
        for (int i = 0; i < n; i++) {
            prefixsum += arr[i];

            if (prefixsum == k)
                count++;

            if (m.find(prefixsum - k) != m.end())
                count += m[prefixsum - k];

            m[prefixsum]++;
        }

        return count;
    }
};
